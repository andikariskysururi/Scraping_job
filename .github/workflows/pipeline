name: üîÅ Auto Update KB + Push to HuggingFace

on:
  schedule:
    - cron: "0 */12 * * *"   # jalan tiap 12 jam
  workflow_dispatch: {}     # bisa run manual

jobs:
  update-kb:
    runs-on: ubuntu-latest

    steps:
      # Clone repo
      - name: Checkout Repository
        uses: actions/checkout@v4

      # Setup Python version
      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.10"

      # Install requirements
      - name: Install Dependencies
        run: pip install -r requirements.txt

      # üîë Pass HF Token ke ENV supaya bisa dipakai di script
      - name: Run Pipeline Automation
        env:
          HF_TOKEN: ${{ secrets.HF_TOKEN }}
        run: python pipeline_automation.py

      # Optional : Commit file hasil scraping / FAISS ke repo
      - name: Commit Changes
        run: |
          git config --global user.name "github-actions"
          git config --global user.email "actions@github.com"
          git add .
          git commit -m "Auto update pipeline $(date)" || echo "‚ö†Ô∏è No changes to commit"
          git push || echo "‚ö†Ô∏è Nothing to push"
